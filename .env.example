# Copie este arquivo para .env e configure suas credenciais

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=seu-projeto-gcp
GOOGLE_APPLICATION_CREDENTIALS=./path/to/service-account-key.json
VERTEX_AI_LOCATION=us-central1
GEMINI_MODEL=gemini-2.5-flash

# ChromaDB Configuration
CHROMA_DB_PATH=./data/chroma_db
CHROMA_COLLECTION_NAME=presentation_transcriptions
ANONYMIZED_TELEMETRY=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001
API_RELOAD=true

# Dify.ai Configuration
DIFY_API_URL=https://api.dify.ai/v1
DIFY_API_KEY=sua-chave-dify-aqui
DIFY_DATASET_ID=seu-dataset-id-aqui
DIFY_WORKFLOW_API_KEY=sua-chave-workflow-aqui

# Security
JWT_SECRET_KEY=sua-chave-secreta-super-segura-aqui
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Upload Configuration
MAX_FILE_SIZE_MB=100
ALLOWED_PRESENTATION_FORMATS=pptx,ppt,pdf
UPLOAD_DIRECTORY=./data/uploads
TEMP_EXTRACTION_DIRECTORY=./data/temp_extraction

# Processing Configuration
SLIDES_PER_CHUNK=5
OVERLAP_SLIDES=1
MIN_CONFIDENCE_THRESHOLD=0.8

# Gemini Vision Configuration
MAX_IMAGE_SIZE_MB=20
IMAGE_QUALITY=high

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Redis Configuration (para background processing)
REDIS_URL=redis://localhost:6380
